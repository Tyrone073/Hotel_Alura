<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.tyrone</groupId>
  <artifactId>Hotel_DESKTOP</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Hotel</name>
  <description>Proyecto para ensayar una app de hotel con reservaciones</description>
  
  <properties>
	  <java.version>19</java.version>
  </properties>
  
  <build>
	  <plugins>
		  <plugin>
			  <groupId>org.apache.maven.plugins</groupId>
			  <artifactId>maven-compiler-plugin</artifactId>
			  <version>3.11.0</version>
			  <configuration>
				  <source>16</source>
				  <target>16</target>
				  <optimize>true</optimize> 
			  </configuration>
		  </plugin>
	  </plugins>
  </build>
  
  <dependencies>
	  <dependency>
	    <groupId>com.h2database</groupId>
	    <artifactId>h2</artifactId>
	    <version>2.1.214</version>
	</dependency>
	  
	  <dependency>
		  <groupId>org.hibernate</groupId><!-- es para mapear y conectar con base de datos y manejarlos sin necesidad de escibirlo on el lenguaje sql crear, leer, actualizar y eliminar-->
		  <artifactId>hibernate-entitymanager</artifactId>
		  <version>5.6.14.Final</version>
	  </dependency>
	  <dependency>
		  <groupId>org.projectlombok</groupId><!-- es para hacer anotaciones como el @getters y simplificar el codigo  -->
		  <artifactId>lombok</artifactId>
		  <version>1.18.26</version>
		  <scope>compile</scope>
	  </dependency>
  </dependencies>
  
</project>